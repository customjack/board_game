# PeerJS Server Configuration
# Copy this file to .env and configure your custom PeerJS server

# Custom PeerServer host (leave empty to use default PeerJS cloud server)
# Examples: 'localhost', '192.168.1.100', 'peerserver.mydomain.com'
PEERJS_HOST=

# Custom PeerServer port (default: 9000 for local servers)
PEERJS_PORT=

# Custom PeerServer path (default: '/peerjs' or '/')
PEERJS_PATH=

# PeerServer API key (optional, required by some servers)
PEERJS_KEY=

# Use secure connection (true/false)
# Defaults to true for remote servers, false for localhost
PEERJS_SECURE=

# Example configuration for local PeerServer:
# PEERJS_HOST=localhost
# PEERJS_PORT=9000
# PEERJS_PATH=/peerjs
# PEERJS_KEY=peerjs
# PEERJS_SECURE=false

# Example configuration for remote PeerServer:
# PEERJS_HOST=peerserver.mydomain.com
# PEERJS_PORT=443
# PEERJS_PATH=/myapp
# PEERJS_SECURE=true
